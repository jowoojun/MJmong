//- 회원가입
#signupModal.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h3.modal-title 회원가입
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') ×
      .modal-body
        form(action='/users/signup', method='POST')
          .form-group
            label 이름
            input.form-control(type='text', name='name', placeholder='이름')
          .form-group
            label 이메일
            input.form-control(type='email', name='email', placeholder='이메일')
          .form-group
            label 비밀번호
            input.form-control(type='password', name='password', placeholder='비밀번호')
          .form-group
            label 비밀번호 확인
            input.form-control(type='password', name='password_confirmation', placeholder='비밀번호 확인')
          button.btn.btn-primary.float-left-align(type='submit') 회원가입